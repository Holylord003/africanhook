{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python39", "nodejs"],
          "buildCommand": [
            "pip install -r requirements.txt",
            "python manage.py migrate",
            "python manage.py collectstatic --noinput"
          ]
        }
      }
    }
  },
  "deploy": {
    "runtime": "python39",
    "env": {
      "DJANGO_SECRET_KEY": {
        "required": true,
        "description": "Secret key for Django application"
      },
      "DJANGO_DEBUG": {
        "required": true,
        "description": "Debug mode for Django application (True/False)"
      }
    },
    "web": "gunicorn hartlord.wsgi:application --workers 4 --bind 0.0.0.0:$PORT",
    "envs": {
      "DJANGO_SECRET_KEY": "@django_secret_key",
      "DJANGO_DEBUG": "@django_debug"
    }
  }
}
